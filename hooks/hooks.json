{
  "Stop": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/send-notification.sh stop 3 'Claude has stopped and is waiting'",
          "timeout": 10
        }
      ]
    }
  ],
  "Notification": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/notification-handler.sh",
          "timeout": 10
        }
      ]
    }
  ]
}
